<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_input_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/v_input_field_bg"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/v_input_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/baseline_call_24"
        app:tint="@color/dark_text" />

    <View
        android:id="@+id/v_input_divider"
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/v_input_gray" />

    <EditText
        android:id="@+id/v_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:ems="10"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="@color/dark_text" />

    <AutoCompleteTextView
        android:id="@+id/v_input_auto_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:singleLine="true"
        android:visibility="gone" />
</LinearLayout>